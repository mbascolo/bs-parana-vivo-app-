<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.paranavivo.activity.global.Bienvenida">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SERVICIO DE NOTIFICACIONES"
        android:id="@+id/textView2"
        android:textColor="#0d7f00"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/logosurubi"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leer noticias"
        android:id="@+id/btn_leer_noticias"
        android:background="#0d7f00"
        android:textColor="#FFF"
        android:onClick="leerNoticias"
        android:nestedScrollingEnabled="false"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:typeface="normal"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/imageView"
        android:layout_marginBottom="20dp"
        android:layout_alignRight="@+id/btn_perfil"
        android:layout_alignEnd="@+id/btn_perfil"
        android:layout_alignLeft="@+id/btn_perfil"
        android:layout_alignStart="@+id/btn_perfil" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ACTUALIZAR MIS DATOS"
        android:id="@+id/btn_perfil"
        android:background="#517df6"
        android:textColor="#FFF"
        android:onClick="cambiarPerfil"
        android:nestedScrollingEnabled="false"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:typeface="normal"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/btn_leer_noticias"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
