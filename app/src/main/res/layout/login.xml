<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".activity.seguridad.Login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_width="220dp"
                android:layout_height="71dp"
                android:id="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/logosurubi"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logResultado"
            android:layout_gravity="center_horizontal"
            android:text="Ingrese sus datos"
            android:textColor="#c71010" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/logNombre"
                android:layout_below="@+id/textNombre"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:singleLine="true"
                android:nextFocusDown="@+id/logApellido"
                android:textColorHint="#3b3b3b"
                android:imeOptions="actionNext"
                android:hint="Nombre"
                android:textSize="16dp"
                android:textColor="#3b3b3b" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/logApellido"
                android:layout_below="@+id/textNombre"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:singleLine="true"
                android:nextFocusDown="@+id/logApellido"
                android:textColorHint="#3b3b3b"
                android:imeOptions="actionDone"
                android:hint="Apellido"
                android:textSize="16dp"
                android:textColor="#3b3b3b" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/logEmail"
                android:layout_below="@+id/textApellido"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:textColorHint="#3b3b3b"
                android:hint="Email"
                android:layout_marginBottom="10dp"
                android:textSize="16dp"
                android:textColor="#3b3b3b" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de usuario"
                android:id="@+id/textView4"
                android:layout_below="@+id/textNombre"
                android:layout_alignLeft="@+id/textNombre"
                android:layout_alignStart="@+id/textNombre"
                android:textIsSelectable="false"
                android:layout_gravity="left|center_horizontal"
                android:textSize="16dp"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:id="@+id/dynamic_spinner"
                android:textSize="20dp"
                android:textColor="#3b3b3b"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/logApellido"
                android:layout_marginBottom="5dp" />

            <!--   <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/logResultado"
                   android:layout_below="@+id/dynamic_spinner"
                   android:layout_alignParentLeft="true"
                   android:layout_alignParentStart="true"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentEnd="true"
                   android:textAlignment="center"
                   android:textColor="#07117d"
                   android:textSize="20dp"
                   android:textStyle="bold" />-->
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <Button
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Ingresar"
                android:id="@+id/btnIngresar"
                android:textSize="16dp"
                android:textColor="#FFF"
                android:background="#18b10d"
                android:onClick="onIngresar"
                android:layout_below="@+id/logResultado"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|center_horizontal" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
